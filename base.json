{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "jsx": "react",
    "sourceMap": true,
    "newLine": "lf",
    "allowJs": false,
    "outDir": "lib/",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*"
      ]
    },
    "lib": [
      "dom",
      "es2015",
      "es5"
    ]
  },
  "exclude": [
    "./node_modules",
    "./jspm_packages",
    "./dist"
  ],
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "files": [
    "types/generic.d.ts",
    "types/redux-persist.d.ts"
  ]
}